{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,

    "strict": true,
    "esModuleInterop": true,

    "rootDirs": ["src", "tests"],
    "outDir": "./dist",

    "sourceMap": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true
  },

  "include": ["src", "tests"]
}
